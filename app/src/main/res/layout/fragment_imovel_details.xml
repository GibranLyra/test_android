<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/fragment_imovel_details_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_imovel_details_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/normal_padding"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/xsmall_padding"
                    android:paddingStart="@dimen/xsmall_padding">


                    <android.support.v7.widget.CardView
                        android:id="@+id/character_recycler_character_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingBottom="@dimen/normal_padding"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/fragment_imovel_details_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:src="@drawable/placeholder"/>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/fragment_imovel_details_author"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="@dimen/xsmall_padding"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="author name"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/fragment_imovel_details_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xsmall_padding"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="20/02/2017"/>

                <ImageView
                    android:id="@+id/fragment_imovel_details_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="320dp"
                    android:contentDescription="@string/imovel_details_image_description"
                    android:transitionName="imovel_image_transition"
                    tools:src="@drawable/placeholder"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_imovel_details_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/small_padding"
                        android:drawableStart="@drawable/ic_favorite_black_24dp"
                        android:padding="@dimen/small_padding"
                        android:textSize="@dimen/text_size_small"
                        tools:text="1000"/>


                    <TextView
                        android:id="@+id/fragment_imovel_details_views_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/small_padding"
                        android:drawableStart="@drawable/ic_remove_views_24dp"
                        android:textSize="@dimen/text_size_small"
                        tools:text="100"/>

                    <TextView
                        android:id="@+id/fragment_imovel_details_buckets_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/small_padding"
                        android:drawableStart="@drawable/ic_bucket_black_24dp"
                        android:padding="@dimen/normal_padding"
                        android:textSize="@dimen/text_size_small"
                        tools:text="1000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_imovel_details_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:textSize="@dimen/text_size_small"
                    tools:text="Description"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>